<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<bean id="triangle" class = "prepare.interview.Triangle">
		<property name="pointA" ref="point0"/>
		<property name="pointB" ref="point1"/>
		<property name="pointC" ref="point2"/>
	</bean>
	<bean id="point0" class="prepare.interview.Point">
		<property name="x" value="0"/>
		<property name="y" value="0"/>
	</bean>
	<bean id="point1" class="prepare.interview.Point">
		<property name="x" value="-20"/>
		<property name="y" value="0"/>
	</bean>
	<bean id="point2" class="prepare.interview.Point">
		<property name="x" value="0"/>
		<property name="y" value="20"/>
	</bean>
</beans>